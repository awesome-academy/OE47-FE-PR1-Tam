include ./product.pug

mixin optionPage
    ul.home-filter__page-option
        each item in listHotOption
            li.home-filter__page-option-item
                a(href="#")= item

mixin product
    each item in listHotProduct
        - const {img, title, price, rate, feedback} = item
            +productItem(img, title, price, rate, feedback)